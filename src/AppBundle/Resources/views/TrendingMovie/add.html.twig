{% extends "AppBundle::layout.html.twig" %}
{% block body%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-offset-2 col-md-8">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="rose">
                        <i class="material-icons">whatshot</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">Trending Movie</h4>
                        {{form_start(form)}}
                        <br>
                        <div class="form-group label-floating">
                            <label class="control-label">Movie / Serie TV</label>
                            {{form_widget(form.poster,{value: app.request.query.get("id"),"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.poster)}}</span>
                        </div>

                        <span class="pull-right"><a href="{{path("app_trending_movie_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>

                        {{form_end(form)}}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock%}
